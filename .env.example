# Discord Webhook Configuration
WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Nations to monitor (comma-separated list)
NATIONS=Nation1,Nation2,Nation3

# Discord mention (optional)
# Format: <@&ROLE_ID> for role mentions or <@USER_ID> for user mentions
MENTION=

# Debug mode (optional, default: false)
DEBUG_MODE=false

# No ping mode (optional, default: false)
# When true, sends messages without @mentions
NO_PING=false

# Check CTE (Ceased To Exist) status (optional, default: true)
# Set to false to reduce API calls and increase speed
CHECK_CTE=true

# Snapshot path (optional, default: ./snapshot/auction_snapshot.json)
SNAPSHOT_PATH=./snapshot/auction_snapshot.json

# Check snapshot for new auctions (optional, default: false)
# When true, only sends messages if new bids are detected since the last run
# When false, sends a message on every run
CHECK_SNAPSHOT=false

# User agent for API requests (optional)
# Defaults to the first nation in NATIONS if not supplied
USER_AGENT=

# Schedule for running the notifier (cron format)
# Examples:
# */15 * * * * - Every 15 minutes
# 0 * * * * - Every hour
# 0 0 * * * - Every day at midnight
SCHEDULE=*/15 * * * *
